{
	"name": "@yaiuse/echo",
	"version": "0.2.0",
	"license": "MIT",
	"author": {
		"name": "YAIuse",
		"email": "help.yai.team@gmail.com",
		"url": "https://github.com/YAIuse"
	},
	"description": "An HTTP client built on fetch, offering an Axios-like experience with support for interceptors.",
	"repository": {
		"type": "git",
		"url": "https://github.com/YAIuse/Echo"
	},
	"main": "dist/index.cjs.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"prebuild": "rimraf dist",
		"bundle": "esbuild dist/index.js --bundle --minify --platform=node --format=cjs --outfile=dist/index.cjs.js && esbuild dist/index.js --bundle --minify --platform=node --format=esm --outfile=dist/index.esm.js",
		"build": "tsc --project tsconfig.build.json && bun run bundle",
		"test:unit": "jest --coverage",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "6.0.0",
		"@types/jest": "^30.0.0",
		"esbuild": "^0.27.2",
		"jest": "^30.2.0",
		"jest-fetch-mock": "^3.0.3",
		"prettier": "3.6.2",
		"rimraf": "^6.1.2",
		"ts-jest": "^29.4.6",
		"typescript": "^5.9.3"
	},
	"jest": {
		"preset": "ts-jest/presets/default-esm",
		"testEnvironment": "node",
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"testMatch": [
			"**/?(*.)+(spec|test).ts"
		],
		"transform": {
			"^.+\\.ts$": [
				"ts-jest",
				{
					"useESM": true
				}
			]
		},
		"moduleNameMapper": {
			"^src/(.*)$": "<rootDir>/src/$1"
		},
		"extensionsToTreatAsEsm": [
			".ts"
		]
	},
	"engines": {
		"node": "24.12.0"
	},
	"keywords": [
		"echo",
		"axios",
		"node",
		"http",
		"https",
		"fetch",
		"network",
		"browser",
		"request",
		"promise",
		"rest",
		"api",
		"client"
	]
}
