{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"noEmit": false,
		"removeComments": true,
		"declaration": true,
		"declarationMap": false,
		"stripInternal": true,
		"verbatimModuleSyntax": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "tests"]
}
